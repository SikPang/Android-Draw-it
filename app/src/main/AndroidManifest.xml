<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.creativity_minigames_team1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon"
        android:label="그려보아요"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Creativity_MiniGames_Team1">
        <activity android:name=".MainActivity"
            android:label="그려보아요">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SelectGameActivity"/>
        <activity android:name=".FirstGameActivity"/>
        <activity android:name=".FirstDrawingActivity"/>
        <activity android:name=".SecondDrawingActivity"/>
        <activity android:name=".SecondGameActivity"/>
        <activity android:name=".ThirdDrawingActivity"/>
        <activity android:name=".ThirdGameActivity"/>
        <activity android:name=".FourthDrawingActivity"/>
        <activity android:name=".FourthGameActivity"/>
        <activity android:name=".LoadActivity"/>
        <activity android:name=".RegistrationActivity"/>
        <activity android:name=".ScoreActivity"/>
    </application>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/> <!-- 읽기권한 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/> <!-- 쓰기권한 -->
</manifest>

